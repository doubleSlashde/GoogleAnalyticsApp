            <Label layoutX="14.0" layoutY="14.0" text="Account:"/>
            <ComboBox fx:id="cmbAccount" layoutX="81.0" layoutY="9.0" prefHeight="27.0" prefWidth="321.0"/>
            <ComboBox fx:id="cmbProperty" layoutX="81.0" layoutY="44.0" prefHeight="27.0" prefWidth="321.0"/>
            <ComboBox fx:id="cmbView" layoutX="81.0" layoutY="79.0" prefHeight="27.0" prefWidth="321.0"/>
            <Label layoutX="14.0" layoutY="49.0" text="Property:"/>
            <Label layoutX="14.0" layoutY="84.0" text="View:"/>
