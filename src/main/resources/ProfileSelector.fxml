            <TextField fx:id="txtPath" layoutX="81.0" layoutY="148.0" prefHeight="27.0" prefWidth="321.0"
                       promptText="Pfad zur Unterseite" text="/"/>
            <Label layoutX="14.0" layoutY="153.0" text="Pfad:"/>
            <Separator layoutX="9.0" layoutY="186.0" prefHeight="4.0" prefWidth="397.0"/>
