      </Pane>
      <Pane maxHeight="48.0" minHeight="48.0" prefHeight="48.0" VBox.vgrow="NEVER">

            <Button layoutX="305.0" layoutY="11.0" mnemonicParsing="false" onAction="#save" text="Übernehmen"/>
            <Button layoutX="209.0" layoutY="11.0" mnemonicParsing="false" onAction="#cancel" text="Abbrechen"/>
            <Separator layoutY="-1.0" prefHeight="4.0" prefWidth="417.0"/>

      </Pane>
   </VBox>
</AnchorPane>
